            <!-- Empty State Message -->
            <div id="no-results" class="hidden text-center mt-12 p-8 border-2 border-dashed border-gray-600 rounded-xl">
                <p class="text-2xl font-semibold text-gray-400">No songs match your current filters.</p>
                <p class="text-gray-500 mt-2">Try adjusting your search terms or genre filter.</p>
