    <!-- Song Lyric Modal (Hidden by Default) -->
    <div id="lyric-modal" class="fixed inset-0 bg-black bg-opacity-80 z-50 hidden items-center justify-center p-4">
        <div class="card w-full max-w-4xl max-h-[90vh] rounded-xl shadow-glow overflow-hidden flex flex-col">
            <header class="p-6 border-b border-gray-700 flex justify-between items-center">
                <h2 id="modal-title" class="text-3xl font-bold text-white"></h2>
                <button onclick="closeModal()" class="text-gray-400 hover:text-accent transition duration-150 text-2xl p-2">
                    &times;
                </button>
            </header>
            <div class="p-6 overflow-y-auto flex-grow">
                <div class="text-lg mb-4 space-y-2">
                    <p class="text-accent font-semibold">Genre: <span id="modal-genre" class="text-gray-300 font-normal"></span></p>
                    <p class="text-accent font-semibold">Status: <span id="modal-status" class="text-gray-300 font-normal"></span></p>
                    <p class="text-accent font-semibold">Keywords: <span id="modal-keywords" class="text-gray-300 font-normal"></span></p>
                </div>
                <h3 class="text-2xl font-bold text-white mt-6 mb-3 border-b border-gray-700 pb-1">Lyrics Preview</h3>
                <pre id="modal-lyrics" class="whitespace-pre-wrap font-mono text-gray-300">
                    <!-- IMPORTANT SECURITY UPDATE: Lyrics are now hidden from public view -->
                    Access to the full lyrics is restricted to paying customers and collaborators.

                    Please use the contact information below to inquire about licensing and collaboration opportunities for this song.
                </pre>
                
                <!-- Contact Action -->
                <div class="mt-8 pt-4 border-t border-gray-700">
