    <script>
        // Start of Song Data
        const restrictedLyricMessage = "Access to the full lyrics is restricted to paying customers and collaborators. Please use the contact information below to inquire about licensing and collaboration opportunities for this song.";

        const songs = [
            {
                "title": "sports sports sports",
                "genre": "Hip Hop",
                "keywords": "basketball, football, winning, hustle, power",
                "status": "Available",
                "lyrics": restrictedLyricMessage 
            },
            {
                "title": "Love and Life",
                "genre": "R&B",
                "keywords": "romance, journey, dedication, future, commitment",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Gospel Praise",
                "genre": "Gospel",
                "keywords": "faith, worship, salvation, blessing, church",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Urban Dreams",
                "genre": "Hip Hop",
                "keywords": "city, hustle, ambition, struggle, skyline, concrete",
                "status": "In Development",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Midnight Blues",
                "genre": "Blues",
                "keywords": "sadness, whiskey, heartbreak, late night, regret, lonely",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Heartbeat Rock",
                "genre": "Rock",
                "keywords": "energy, fast, drums, adrenaline, passion, love",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Country Roads Home",
                "genre": "Country",
                "keywords": "trucks, family, small town, nostalgia, dirt roads",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Acoustic Confession",
                "genre": "Pop",
                "keywords": "vulnerable, soft, acoustic, apology, honest, truth",
                "status": "In Development",
                "lyrics": restrictedLyricMessage
            },
            // ------------------------------------
            // START OF NEW SONGS BASED ON USER INPUT
            // ------------------------------------
            {
                "title": "I Can't Afford Free",
                "genre": "Country",
                "keywords": "freedom, cost, oppression, struggle, hard life",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Miss Decever",
                "genre": "R&B",
                "keywords": "deceit, betrayal, liar, smooth, heartbreak",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Liar Is a Liar",
                "genre": "Blues",
                "keywords": "trust, broken promises, truth, heavy, warning",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "All I Wanna Do is Play the Blues",
                "genre": "Blues",
                "keywords": "passion, music, pure sound, dedication, road life",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            },
            {
                "title": "Dream Drift",
                "genre": "R&B",
                "keywords": "relaxed, dreaming, drifting, slow tempo, soulful",
                "status": "Available",
                "lyrics": restrictedLyricMessage
            }
        ];

        const songListElement = document.getElementById('song-list');
        const searchInput = document.getElementById('search-input');
        const genreFilter = document.getElementById('genre-filter');
        const statusFilter = document.getElementById('status-filter');
        const noResultsMessage = document.getElementById('no-results');

        // Modal elements
        const lyricModal = document.getElementById('lyric-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalGenre = document.getElementById('modal-genre');
        const modalStatus = document.getElementById('modal-status');
        const modalKeywords = document.getElementById('modal-keywords');
        const modalLyrics = document.getElementById('modal-lyrics');

        // Function to create an HTML card for a song
        function createSongCard(song) {
            const card = document.createElement('div');
            card.className = 'card rounded-xl p-6 shadow-xl hover:shadow-glow transition duration-300 transform hover:scale-[1.02] cursor-pointer';
            card.setAttribute('data-title', song.title);
            card.setAttribute('data-genre', song.genre);
            card.setAttribute('data-status', song.status);
            
            // Set accent color based on status
            let statusColor = '';
            if (song.status === 'Available') {
                statusColor = 'text-green-400';
            } else if (song.status === 'In Development') {
                statusColor = 'text-yellow-400';
            }

            card.innerHTML = `
                <h3 class="text-2xl font-bold text-white mb-2">${song.title}</h3>
                <p class="text-accent mb-3">${song.genre}</p>
                <div class="flex flex-wrap gap-2 text-sm mb-4">
                    ${song.keywords.split(', ').map(k => `<span class="bg-slate-700/50 px-3 py-1 rounded-full text-gray-300">${k}</span>`).join('')}
                </div>
                <p class="font-semibold ${statusColor}">${song.status}</p>
            `;

            // Attach click event to open modal
            card.onclick = () => openModal(song);
            return card;
        }

        // Function to render the song list based on filters
        function renderSongs() {
            const searchTerm = searchInput.value.toLowerCase();
            const selectedGenre = genreFilter.value;
            const selectedStatus = statusFilter.value;

            const filteredSongs = songs.filter(song => {
                const searchArea = `${song.title} ${song.keywords} ${song.genre}`.toLowerCase();
                const matchesSearch = searchArea.includes(searchTerm);
                
                const matchesGenre = selectedGenre === '' || song.genre === selectedGenre;
                
                const matchesStatus = selectedStatus === '' || song.status === selectedStatus;

                return matchesSearch && matchesGenre && matchesStatus;
            });

            songListElement.innerHTML = ''; // Clear previous results

            if (filteredSongs.length > 0) {
                filteredSongs.forEach(song => {
                    songListElement.appendChild(createSongCard(song));
                });
                noResultsMessage.classList.add('hidden');
            } else {
                noResultsMessage.classList.remove('hidden');
            }
        }

        // Initialize the event listeners
        searchInput.addEventListener('input', renderSongs);
        genreFilter.addEventListener('change', renderSongs);
        statusFilter.addEventListener('change', renderSongs);

        // Function to open the lyric modal (UPDATED TO HIDE LYRICS)
        function openModal(song) {
            modalTitle.textContent = song.title;
            modalGenre.textContent = song.genre;
            modalStatus.textContent = song.status;
            modalKeywords.textContent = song.keywords;
            
            // Ensure the lyrics are the restricted message for security
            modalLyrics.textContent = restrictedLyricMessage;
            
            // Show the modal
            lyricModal.classList.remove('hidden');
            lyricModal.classList.add('flex');
            document.body.style.overflow = 'hidden'; // Prevent scrolling background
        }

        // Function to close the lyric modal
        function closeModal() {
            lyricModal.classList.add('hidden');
            lyricModal.classList.remove('flex');
            document.body.style.overflow = 'auto'; // Restore scrolling
        }

        // Close modal when clicking outside the content
        lyricModal.addEventListener('click', (e) => {
            if (e.target === lyricModal) {
                closeModal();
            }
        });

        // Close modal when pressing the Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !lyricModal.classList.contains('hidden')) {
                closeModal();
            }
        });


        // Initial render when the page loads
        document.addEventListener('DOMContentLoaded', renderSongs);

    </script>
</body>
</html>
